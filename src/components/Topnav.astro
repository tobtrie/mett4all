---
export interface Props {
    title?: string;
    isRoot?: boolean
}

const { title, isRoot = false } = Astro.props;
---
<nav class="navbar">
    <div class="logo">
        {!isRoot && <a href="/"><img  src="/images/Mett4All-Logo-Text.svg" height="50px" /></a>}
    </div>
    {title ? <h1 class="text-gradient">{title}</h1> : <img  src="/images/Mett4All-Logo-Text.svg" height="150px" />}
    <div class="socials">
        <a href="https://www.instagram.com/mett4all/">
            <i class="fa-brands fa-instagram"></i>
        </a>
        <a href="/" class="spotify">
            <i class="fa-brands fa-spotify"></i>
        </a>
    </div>
</nav>
<style>
    .navbar {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        margin: 0;
        justify-items: center;
    }
    .navbar > * {
        width: 100%;
    }
    .logo {
        margin-left: 1rem;
    }
    .socials {
        text-align: right;
        font-size: 1.5rem;
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
        margin-top: 1rem;
        margin-right: 1rem;
    }
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
		text-align: center;
	}
    a {
        text-decoration: none;
        color: inherit;
        transition: color 0.2s ease;
    }
    a:hover {
        color: var(--primary);
    }
    .spotify {
        cursor: not-allowed;
    }
    .spotify:hover {
        color: inherit;
    }
</style>