<style>
    .main {
        width: 100%;
        transition: width 3s ease;
    }
    .height {
        padding: 2rem;
        text-align: center;
        opacity: 0.9;
        margin: 0 auto;
    }
    .artists {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(30ch, 1fr));
        gap: 1rem;
        margin: 0;
        padding: 0;
        justify-items: center;
    }
    .image__contain {
        background-size: contain;
    }
    .image__black {
        background-color: #000;
    }
    @media screen and (min-width: 600px) {
        .main {
            width: 75%;
        }
    }
</style>